{
  "name": "csgo-sharecode",
  "version": "3.0.1",
  "description": "Encode / decode CSGO share code",
  "main": "dist/commonjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "author": "AkiVer",
  "license": "GPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/akiver/csgo-sharecode.git"
  },
  "homepage": "https://github.com/akiver/csgo-sharecode",
  "keywords": [
    "csgo",
    "valve",
    "share code",
    "replays",
    "demos",
    "crosshair"
  ],
  "files": [
    "dist",
    "src/index.ts"
  ],
  "scripts": {
    "build:cjs": "tsc --module commonjs --outDir dist/commonjs",
    "build:esm": "tsc --module es2015 --outDir dist/esm",
    "build:types": "tsc --emitDeclarationOnly --declaration --removeComments false",
    "build": "yarn build:esm && yarn build:cjs && yarn build:types",
    "dev": "tsc --watch",
    "format": "prettier --write \"**\"",
    "t": "yarn test",
    "test": "vitest run",
    "tw": "vitest --watch",
    "tsc": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "17.0.21",
    "prettier": "2.5.1",
    "typescript": "4.6.2",
    "vitest": "0.6.0"
  },
  "engines": {
    "node": ">=10.8.0"
  }
}
